{
  "name": "@outfitter/validation",
  "description": "Zod schema registry, diagnostics, and JSON Schema helpers for Outfitter",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "bun@1.3.0",
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/monorepo.git",
    "directory": "packages/validation"
  },
  "keywords": [
    "outfitter",
    "validation",
    "zod",
    "json-schema",
    "schema-registry"
  ],
  "engines": {
    "bun": ">=1.3.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:tsc",
    "build:tsc": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc --project tsconfig.build.json --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --project tsconfig.test.json --noEmit"
  },
  "dependencies": {
    "zod": "^3.25.1",
    "zod-to-json-schema": "^3.23.1"
  },
  "peerDependencies": {
    "@outfitter/contracts": "1.0.0"
  },
  "devDependencies": {
    "@types/bun": "1.3.0",
    "@types/node": "^22.5.4",
    "typescript": "5.9.3",
    "vitest": "1.6.1"
  }
}
