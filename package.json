{
  "name": "monorepo-next",
  "version": "0.0.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.0",
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "format": "bunx ultracite fix .",
    "lint": "bun run lint:deps && bun run lint:ultracite",
    "lint:deps": "bunx syncpack list-mismatches --config ./.syncpackrc.json",
    "lint:ultracite": "bunx ultracite check .",
    "deps:fix": "bunx syncpack fix-mismatches --config ./.syncpackrc.json",
    "typecheck": "tsc --noEmit",
    "actions:lint": "./scripts/actions/lint-actionlint.sh",
    "actions:test": "./scripts/actions/run-act.sh",
    "test": "vitest --run --passWithNoTests",
    "prepare": "lefthook install"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "comments": {
    "dependencyVersioning": "Exact pins (no prefix) for formatters/linters (Biome, Ultracite, Oxlint, TypeScript) ensure deterministic CI/local parity. Caret ranges (^) for tooling (Lefthook, Syncpack, Vitest) allow patch/minor updates within semantic versioning guarantees."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/bun": "1.3.0",
    "lefthook": "^1.12.3",
    "syncpack": "^13.0.4",
    "typescript": "5.9.3",
    "ultracite": "5.6.4",
    "vitest": "1.6.1"
  }
}
